<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/meal_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rectangle_background"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">
        <TextView
            android:id="@+id/meal_month"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/sun"
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:fontFamily="@font/cafe24dangdanghae"/>

        <TextView
            android:id="@+id/meal_title_month"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingRight="5dp"
            android:text="@string/mon"
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:fontFamily="@font/cafe24dangdanghae"/>

        <TextView
            android:id="@+id/meal_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/calendar"
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:fontFamily="@font/cafe24dangdanghae"/>

        <TextView
            android:id="@+id/meal_title_day"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/sun"
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:fontFamily="@font/cafe24dangdanghae"/>

    </LinearLayout>

    <TextView
        android:id="@+id/meal_contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="@string/calendar"
        android:fontFamily="@font/cafe24ohsquareair"
        android:letterSpacing="0.05"
        android:textSize="18sp"/>

</LinearLayout>